# RevNet-Zero Environment Configuration

# Training configuration
BATCH_SIZE=1
GRADIENT_ACCUMULATION_STEPS=64
MAX_SEQ_LEN=262144
LEARNING_RATE=1e-4

# Memory management
MEMORY_BUDGET_GB=40
USE_REVERSIBLE=true
RECOMPUTE_GRANULARITY=layer

# Hardware configuration
CUDA_VISIBLE_DEVICES=0
MIXED_PRECISION=true
USE_FLASH_ATTENTION=true

# Logging and monitoring
WANDB_PROJECT=revnet-zero
WANDB_ENTITY=your-username
LOG_LEVEL=INFO
LOG_MEMORY_USAGE=true

# Data paths
DATA_PATH=./data
CHECKPOINT_DIR=./checkpoints
OUTPUT_DIR=./outputs

# Model configuration
MODEL_SIZE=1B
NUM_LAYERS=24
D_MODEL=1024
NUM_HEADS=16
D_FF=4096

# Optimization
OPTIMIZER=adamw
WEIGHT_DECAY=0.1
WARMUP_STEPS=1000
MAX_GRAD_NORM=1.0

# Distributed training
WORLD_SIZE=1
RANK=0
MASTER_ADDR=localhost
MASTER_PORT=12355

# Profiling
ENABLE_PROFILING=false
PROFILE_MEMORY=false
PROFILE_COMPUTE=false